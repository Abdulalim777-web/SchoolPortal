<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!-- LEFT SIDE NAV -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index"
                           class="nav-link btn btn-outline-secondary rounded-pill me-2">
                            SchoolPortal
                        </a>
                    </li>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Dashboard" asp-action="Index"
                                   class="nav-link btn btn-outline-primary rounded-pill me-2">
                                    Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Students" asp-action="Index"
                                   class="nav-link btn btn-outline-primary rounded-pill me-2">
                                    Students
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Expenses" asp-action="Index"
                                   class="nav-link btn btn-outline-primary rounded-pill me-2">
                                    Expenses
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Staff" asp-action="Index"
                                   class="nav-link btn btn-outline-primary rounded-pill me-2">
                                    Staff
                                </a>
                            </li><li class="nav-item">
                                <a asp-controller="Payments" asp-action="Index"
                                   class="nav-link btn btn-outline-primary rounded-pill me-2">
                                    Payments
                                </a>
                            </li>


                        }

                        @if (User.IsInRole("Bursar"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Payments" asp-action="Index"
                                   class="nav-link btn btn-outline-success rounded-pill me-2">
                                    Payments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Salaries" asp-action="Index"
                                   class="nav-link btn btn-outline-success rounded-pill me-2">
                                    Salaries
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Expenses" asp-action="Index"
                                   class="nav-link btn btn-outline-primary rounded-pill me-2">
                                    Expenses
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Payments" asp-action="Index"
                                   class="nav-link btn btn-outline-info rounded-pill me-2">
                                    My Payments
                                </a>
                            </li>
                        }
                    }
                </ul>

                <!-- RIGHT SIDE AUTH -->
                <ul class="navbar-nav ms-auto d-flex align-items-center gap-2">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-danger rounded-pill px-4">
                                    Logout
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login"
                               class="btn btn-outline-dark rounded-pill px-4">
                                Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <!-- SUCCESS / ERROR MESSAGES -->
        <div class="container mt-2">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SchoolPortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
